@model IEnumerable<Subs.Models.Entity.SubFile>

@{
    ViewBag.Title = "Newest";
}

<!-- Tafla sem að birtir nýjustu skrárnar. Notum Razor kóðun til að ná í vinsælustu skrárnar úr gagnagrunninum. -->
<table class="table-responsive table table-bordered table-hover table-right">
    <caption><h3>Nýjast</h3></caption>
    <thead>
        <tr>
            <th>Titil</th>
            <th>Gerð</th>
            <th>Þýðing</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.ActionLink(item.sTitle, "FileInfo", new { id = item.SubFileId }) </td>
                <td> @item.sSubType </td>
                <td> @item.sSubLanguage </td>
            </tr>
        }

    </tbody>
</table>

