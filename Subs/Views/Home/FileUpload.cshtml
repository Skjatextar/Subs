@model Subs.Models.Entity.SubFile
           
<div id="upload">
    @using (Html.BeginForm())
    {
        //Html.EditorForModel("RegistrationForm")
        <fieldset>
            <legend><span>Nýbeiðni</span></legend>

            <label>Nafn á mynd</label>
            @Html.TextBoxFor(model => model.sTitle, new { @class = "my" })<br />

            <label>Til</label> @Html.TextBoxFor(model => model.sSubLanguage, new { @class = "my" })  <br />
            <label>Frá</label> @Html.TextBoxFor(model => model.sSubType, new { @class = "my" }) <br />

            <div id="radiob">
                <label> Gerð :  </label>
                <label>Bíómynd </label> @Html.RadioButton("sSubType", "Bíómynd")
                <label>Þáttur </label> @Html.RadioButton("sSubType", "Þáttur")
            </div>
            <!-- Dropdown listi til að velja flokk skráar. -->
            @*@Html.DropDownList("sGenre", "Barnaefni")*@
            <div>
                    <select id="SearchMenu" name="Category">
                        <option value="menu">--Velja flokk--</option>
                        <option value="cartoon">Barnaefni</option>
                        <option value="drama">Drama</option>
                        <option value="comedy">Gaman</option>
                        <option value="thriller">Hrollvekja</option>
                        <option value="action">Spenna</option>
                    </select>
                </div><br />
            <!-- Textarea fyrir nánari lýsingu á skránni. -->
            <label> Nánar</label> <br />
            @Html.TextAreaFor(model => model.sSubDescription, new { @id = "mytext" })

            <!-- Takkar þar sem notandi getur sent inn skrá (submit) eða hætta við þar sem hann er redirectaður inná forsíðuna. -->
            <div>
                <input class="m" type="button" name="cancel" value="Hætta við">
                <input class="my" type="button" name="submit" value="Submit">
            </div>
        </fieldset>


    }
</div>
