@model IEnumerable<Subs.Models.Entity.SubFile>

@{
    ViewBag.Title = "Home Page";
}

<div class="home-page">
    @*---------------Leitarkassi fyrir leit á skrám á forsíðunni--------------*@
    <form id="searchbox" action="">
        <input id="search" type="text" placeholder="Leita"> <!-- Leitarkassinn -->
        <select name="Categories" id="Categories">
            <option value="valmynd">--Velja flokk--</option> <!-- Dropdown listi til að velja flokk -->
            <option value="barnaefni">Barnaefni</option>
            <option value="drama">Drama</option>
            <option value="gaman">Gaman</option>
            <option value="hrollvekja">Hrollvekja</option>
            <option value="spenna">Spenna</option>
        </select>
        <input id="submit" type="submit" value="Leita">  <!-- Leitar takki -->
    </form>
    @*--------------Tafla sem að birtir Nýjustu skrárnar--------------------*@
    <div id="center">
        <table class="table-responsive table table-bordered table-hover ">
            <caption><h3>Nýjast</h3></caption>
            <thead>
                <tr>
                    <th>Titill</th>
                    <th>Gerð</th>
                    <th>Þýðing</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @Html.ActionLink(item.sTitle, "FileInfo", "SubFile", new { id = item.SubFileId }, null) </td>
                        <td> @item.sSubType </td>
                        <td> @item.sSubLanguage </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

        
