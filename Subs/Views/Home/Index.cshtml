@model IEnumerable<Subs.Models.Entity.SubFile>

@{
    ViewBag.Title = "Home Page";
}


<div class="home-page">
<!-- Hér búum við til leitarkassa á forsíðunni með "Search" takka sem nær í gögn úr gagnagrunninum.
    Ásamt því að vera með dropdown lista til að velja flokk.   -->
<form id="searchbox" action="">
    <input id="search" type="text" placeholder="Leita"> <!-- Leitarkassi -->
    <select name="Categories" id="Categories">
        <option value="valmynd">--Velja flokk--</option> <!-- Dropdown listi til að velja flokk -->
        <option value="barnaefni">Barnaefni</option>
        <option value="drama">Drama</option>
        <option value="gaman">Gaman</option>
        <option value="hrollvekja">Hrollvekja</option>
        <option value="spenna">Spenna</option>
    </select>
    
        <input id="submit" type="submit" value="Leita">  <!-- Search takki -->
    
</form>

<!-- Tafla sem að birtir vinsælustu skrárnar. Notum Razor kóðun til að sækja þær úr gagnagrunninum. -->
   

        <div id="center">
            <table class="table-responsive table table-bordered table-hover table-left">
                <caption><h3>Vinsælast</h3></caption>
                <thead>
                    <tr>

                        <th>Titil</th>
                        <th>Gerð</th>
                        <th>Þýðing</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @Html.ActionLink(item.sTitle, "FileInfo", "SubFile", new { id = item.SubFileId },null) </td>
                            <td> @item.sSubType </td>
                            <td> @item.sSubLanguage </td>
                        </tr>
                    }
                </tbody>
            </table>
           
          
    
        </div>
</div>
        
