@model Subs.Models.ViewModel.SubFileViewModel

@{
    ViewBag.Title = "Upload";
}

    <!-- Svæði þar sem notandi skráir inn Nafn, tungumál og slóða á mynd. -->

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "upload" }))
{
                <legend><span id="rs">Senda inn skrá</span></legend>
    <label>Notandanafn :</label>
     @Html.TextBoxFor(model => model.sFileUserName, new { @Value = @User.Identity.Name, @readonly = "readonly" })
        <div id="dropdown">
            <label>þýðing :</label> <label> Gerð :</label> <label> Flokkur :</label> <br />
            @Html.DropDownList("sSubLanguage", new List<SelectListItem>
                    {
                        new SelectListItem{Text = "Enska",Value = "Enska"},
                        new SelectListItem{Text = "Íslenska", Value = "Íslenska"}
            
                    }, "Þýðing")
            @Html.ValidationMessageFor(model => model.sSubType)


            
            @Html.DropDownList("sSubType", new List<SelectListItem>
                    {
                        new SelectListItem{Text = "Bíómynd",Value = "Bíómynd"},
                        new SelectListItem{Text = "Þáttur", Value = "Þáttur"}

                    }, "Gerð")
            @Html.ValidationMessageFor(model => model.sGenre)
            @Html.DropDownList("sGenre", new List<SelectListItem>
                    {
                        new SelectListItem{Text = "Gaman",Value = "Gaman"},
                        new SelectListItem{Text = "Spenna", Value = "Spenna"},
                        new SelectListItem{Text = "Drama", Value = "Drama"},
                        new SelectListItem{Text = "Ævintýri", Value = "Ævintýri"}
                
                    }, "Flokkur")
            @Html.ValidationMessageFor(model => model.sSubType)<br />
                </div>
    <div id="dropdown">
        <!-- Textarea fyrir nánari lýsingu á skránni. -->
        <label> Nánar </label> <br />
        @Html.TextAreaFor(model => model.sSubDescription, new { @class = "mytext" }) <br />
        <!-- Takkar þar sem notandi getur sent inn skrá (submit) eða hætta við þar sem hann er redirectaður inná forsíðuna. -->
        @Html.LabelFor(x => x.sFilePath)
        @Html.TextBoxFor(x => x.sFilePath, new { type = "file" })
        @Html.ValidationMessageFor(x => x.sFilePath)
    </div>
   <input class="btn-default" type="submit" name="submit" value="Senda">
    //Keyrist thegar buid er ad submitta
                @ViewBag.Message
                }


