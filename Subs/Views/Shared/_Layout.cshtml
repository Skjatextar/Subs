    <div id="container" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div id="footer-left">
                <p>Við mælum með <a href="http://www.videolan.org/vlc/index.html">VLC</a></p>
            </div>      
            <div id="footer-right">
                <p>Með því að nota þessa síðu samþykkir þú þessa skilmála (href)</p>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
